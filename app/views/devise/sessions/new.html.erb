<div class="form-container">
  <div class="sign-img">
    <%= image_tag 'car-engine.png' %>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, class: 'form-control', required: true, placeholder: 'Почта' %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', required: true, placeholder: 'Пароль' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <div class="check-group">
          <%= f.check_box :remember_me, id: 'cbx', class: 'check-none' %>
          <label for="cbx" class="flex-item check-toggle"><span></span></label> 
          <div class="flex-item form-check-label"><b>Remember me</b></div>
        </div>
      </div>
    <% end -%>

    <div class="form-group">
      <%= f.submit "Войти", data: { disable_with: '...' }, class: 'btn btn-s' %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>