<a data-fancybox data-src="#<%= service.id %>" href="javascript:;">
	<div class="item <%= service.backgroundcolor %>">
		<% if service.image.present? %>
			<div class="item-image">
				<%= cl_image_tag(service.image.path, { size: '40x40', crop: :thumb, dpr: 3.0 }) %>
			</div>
		<% end %>
		<div class="item-text white-text"><%= service.title %></div>
	</div>
</a>

<div class="price" id="<%= service.id %>">
	<div class="price-text"><%= service.title %></div>
	<% if service.description.present? %>
		<div class="price-description"><%= service.description %></div>
	<% end %>
	<div class="contacts">
		<% if Setting.first.phone.present? %>
			<div class="phone">
				<%= number_to_phone(Setting.first.phone, area_code: true) %>
			</div>
		<% end %>
		<div class="social-flex">
			<% if Setting.first.whatsapp.present? %>
				<a target="_blank" href="https://wa.me/<%= Setting.first.whatsapp %>">
					<div class="social">
						<%= image_tag 'whatsapp.png', class: 'image' %>
					</div>
				</a>
			<% end %>
			<% if Setting.first.viber.present? %>
				<a target="_blank" href="viber://chat&number=<%= Setting.first.viber %>">
					<div class="social">
						<%= image_tag 'viber.png', class: 'image' %>
					</div>
				</a>
			<% end %>
			<% if Setting.first.telegram.present? %>
				<a target="_blank" href="tg://resolve?domain=<%= Setting.first.telegram %>">
					<div class="social">
						<%= image_tag 'telegram.png', class: 'image' %>
					</div>
				</a>
			<% end %>
		</div>
	</div>
	<div class="margin-top-20">
		<% service.items.each do |item| %>
			<div class="prices">
				<div class="price-title">
					<%= item.title%>
				</div>
				<div class="price-cost">
					<%= item.price %>â‚½
				</div>	
			</div>
		<% end %>
	</div>
	<div class="contacts">
		<% if Setting.first.phone.present? %>
			<div class="phone">
				<%= number_to_phone(Setting.first.phone, area_code: true) %>
			</div>
		<% end %>
		<div class="social-flex">
			<% if Setting.first.whatsapp.present? %>
				<a target="_blank" href="https://wa.me/<%= Setting.first.whatsapp %>">
					<div class="social">
						<%= image_tag 'whatsapp.png', class: 'image' %>
					</div>
				</a>
			<% end %>
			<% if Setting.first.viber.present? %>
				<a target="_blank" href="viber://chat&number=<%= Setting.first.viber %>">
					<div class="social">
						<%= image_tag 'viber.png', class: 'image' %>
					</div>
				</a>
			<% end %>
			<% if Setting.first.telegram.present? %>
				<a target="_blank" href="tg://resolve?domain=<%= Setting.first.telegram %>">
					<div class="social">
						<%= image_tag 'telegram.png', class: 'image' %>
					</div>
				</a>
			<% end %>
		</div>
	</div>
</div>